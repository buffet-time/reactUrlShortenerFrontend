{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",

		"noEmit": true,
		"strict": true,
		"pretty": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"removeComments": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true,

		"lib": ["DOM", "DOM.Iterable", "ESNext"]
	},
	"include": ["./src"]
}
